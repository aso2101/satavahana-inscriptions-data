	  <lb n="1"/>
	    <persName key="pers:Isimula">isimula</persName>sāmino
	    bhaya<lb n="2" break="no"/><persName key="pers:Naḍabāḷikā">nadabāḷikāya</persName>
	    nāḍaka<persName key="pers:Torika">torikasa</persName>
