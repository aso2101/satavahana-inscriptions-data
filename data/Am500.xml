      <div type="edition" xml:lang="pra-Latn">
	<ab>
	  <lb n="1"/>
	    sidhaṃ <placeName key="pl:Turughura">turughura</placeName>-vathavasa
	    <persName key="pers:Am-Candramukha">cadamukha</persName>-gahapatisa
	    bālikā <persName key="pers:Am-Tanacandrā">tanacadaya</persName><gap reason="lost" unit="character" quantity="3"/>ca halikaya <persName key="pers:Am-Bādhā">badhaya</persName>
	  <lb n="2"/>
	    nutukāya <persName key="pers:Am-Bhadrā"><choice><sic>bha</sic><corr>ca</corr></choice>daya</persName> ca
	    bhaga<unclear>vato</unclear> mahācetiyasa <app><lem resp="#AO">pura</lem><rdg source="#Chandra1919">para</rdg></app>dāre <unclear>dakhi</unclear>ne 
	    pase <unclear>u</unclear>dhapaṭa <unclear>de</unclear>ya-dhama
	  <lb n="3"/>patiṭhapita
	</ab>
