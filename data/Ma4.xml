	  <lb n="1"/>
	  sidhaṃ 
	  <persName key="pers:Ma-Viṣṇupālita">kāṇa<unclear>bhoasa
	    ve</unclear>nhapālitaṇakasa</persName>
	  <lb n="2"/>
